<div id="avant-card-col" class="col col-12 col-md-12 col-lg-6">

  <a href="/articles/<%=a._id%>">
    <div class="card standard-card avant-card">
      <% let link = a.img ? a.img : "/images/sample-img.png"; %>
      <img class="card-img-top" src="<%=link%>" alt="Card image cap">
      <div class="card-body">

        <a href="/articles/<%=a._id%>">
          <% var titleArr = a.title.split(" ");%>
          <% var titleThatWillFit = "";%>
          <% var count = 0;%>
          <% var index = 0;%>
          <% while (index < titleArr.length && count + titleArr[index].length < 57) { %>
          <% titleThatWillFit += titleArr[index] + " "%>
          <% count += titleArr[index].length + 1;%>
          <% index++;%>
          <%}%>
          <% var titleComplete = index < titleArr.length ? false : true%>
          <h5 class="card-title"> <%= titleComplete ? a.title : titleThatWillFit.substring(0, titleThatWillFit.length - 1) + "..."%> </h5>

        </a>
        <p>
          <% var length = a.title.length < 52 ? 52 - a.title.length : 0; %>
          <% if (a.subtitle){%>
            <% var subtitleArr = a.subtitle.split(" ");%>
            <% var subtitleThatWillFit = "";%>
            <% var count = 0;%>
            <% var index = 0;%>
            <% while (index < subtitleArr.length && count + subtitleArr[index].length < 33) { %>
            <% subtitleThatWillFit += subtitleArr[index] + " "%>
            <% count += subtitleArr[index].length + 1;%>
            <% index++;%>
            <%}%>
            <% var subtitleComplete = index < subtitleArr.length ? false : true%>
              <%= subtitleComplete  ? a.subtitle  : subtitleThatWillFit.substring(0, subtitleThatWillFit.length - 1) + "..."%>
          <% } %>
        </p>
      </div>
    </div>
  </a>
</div>
